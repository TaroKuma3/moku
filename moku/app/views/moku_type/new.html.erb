<div class="container">

  <h1>あたらしいMOKUタグを追加</h1>

  <%= bootstrap_form_with(model: @MokuType,
  url: {controller: :moku_type, action: :create, user_id: current_user.id},
  method: :post,
  local: true) do |f| %>

    <% if @moku_type.errors.any? %>
      <% @moku_type.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

    <div class="row">
      <div class="col-12 col-md-6 mb-4">
        <h3>新しいMOKUタグ</h3>
        <%= render 'form', f:f %>
    </div>
  <% end %>

  <hr/>
  <%= link_to user_moku_type_index_path(@user) do %>
    <i class="fas fa-tag my-color-tag fa-4x m-3 text-center">
      <h5 class="font-weight-bold text-secondary">mokuタグ一覧へ</h5>
    </i>
  <% end %>

  <%= render 'my_shared/go_mypage' %>
</div>