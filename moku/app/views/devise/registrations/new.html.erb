<div class="container">
  <h1>ユーザー登録</h1>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%# ↓https://blog.otsukasatoshi.com/entry/2016/06/01/191739 %>
    <div class="field font-weight-bold">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :name, autofocus: true, hide_label: true %>
    </div>

    <div class="field font-weight-bold">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field font-weight-bold">
      <%= f.label :パスワード %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で設定してください。)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", hide_label: true %>
    </div>

    <div class="field font-weight-bold mb-5">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "登録する！", class: "btn btn-lg bg-info text-white" %>
    </div>
  <% end %>


  <section>
      <%= link_to "/" do %>
        <span class="fas fa-reply fa-4x my-color-reply">
          <h5 class="font-weight-bold text-secondary text-decoration-none">トップページへ</h5>
        </span>
      <% end %>
  </section>
</div>