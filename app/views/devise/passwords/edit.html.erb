<div class="container">
<h2>パスワードの再設定</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    新しいパスワード<br />
    <% if @minimum_password_length %>
      <small>※<%= @minimum_password_length %> 文字以上にしてください。</small><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", hide_label: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認のためもう一度入力してください。" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true %>
  </div>

  <div class="actions">
    <%= f.submit "再設定する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>