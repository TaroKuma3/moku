      <ol class="carousel-indicators">
        <li data-target="#tunagariCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#tunagariCarousel" data-slide-to="1"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/assets/about_tunagari1.png" class="d-block w-100" alt="pick upの画面">
        </div>
        <div class="carousel-item">
          <img src="/assets/about_tunagari2.png" class="d-block w-100" alt="moku just nowの画面">
        </div>
      </div>
      <a class="carousel-control-prev" href="#tunagariCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#tunagariCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>