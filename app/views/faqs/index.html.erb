<div class="container">
  <h1>よくある質問</h1>

  <div class="row">
    <div class="col-12 col-md-4 order-md-1">
      <div class="card mb-3 border-info text-info font-wheight-bold">
        <div class="card-body text-info text-center p-3">
          <h2>カテゴリー</h2>
          <hr />
            <div class="text-dark" id="tag_cloud">
              <% tag_cloud Faq.category_counts, %w{s m l} do |tag, css_class| %>
                  <%= link_to tag.name, tag_path(tag.name), class: css_class %>&ensp;&frasl;&ensp;
              <% end %>
            </div>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-8 order-md-0">
      <% @faqs.each do |faq| %>
        <div class="card bg-light mb-2">
          <div class="card-body m-0 p-2">
            <i class="fas fa-question my-color-faq"></i>&ensp;
            <%= link_to(faq.questions, "/faqs/#{faq.id}") %>
            <%
=begin%>
 <small class="float-right mx-2">カテゴリー：<%= raw faq.category_list.map { |t| link_to t, tag_path(t)}.join(',') %></small> 
<%
=end%>

<small class="float-right mx-2"><i class="fas fa-folder"></i>&thinsp;<%= raw faq.category_list.map { |t| link_to t, tag_path(t)}.join(',') %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= will_paginate @faqs, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center' %>

  <%= render 'my_shared/go_top_or_mypage'%>
</div>