<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h3 class="font-weight-bold">登録できました！<br />ようこそmokuへ！</h3>
    </div>
  </div>
  <div id="carouselIndicators" class="carousel slide bt-5" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselIndicators" data-slide-to="1"></li>
      <li data-target="#carouselIndicators" data-slide-to="2"></li>
      <li data-target="#carouselIndicators" data-slide-to="3"></li>
      <li data-target="#carouselIndicators" data-slide-to="4"></li>
      <li data-target="#carouselIndicators" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner"><%# data-slide-to="0" %>
      <div class="carousel-item active">
        <img src="/assets/howto1.png" class="d-block w-100" alt="mokuタグをつくろう">
      </div>
      <div class="carousel-item"><%# data-slide-to="1" %>
        <img src="/assets/howto2.png" class="d-block w-100" alt="mokuろう">
      </div>
      <div class="carousel-item"><%# data-slide-to="2" %>
        <img src="/assets/howto3.png" class="d-block w-100" alt="カレンダーとmoku一覧">
      </div>
      <div class="carousel-item"><%# data-slide-to="3" %>
        <img src="/assets/howto4.png" class="d-block w-100" alt="Pick UPとBook Mark">
      </div>
      <div class="carousel-item"><%# data-slide-to="4" %>
        <img src="/assets/howto5.png" class="d-block w-100" alt="moku Just Now">
      </div>
      <div class="carousel-item"><%# data-slide-to="5" %>
        <img src="/assets/howto6.png" class="d-block w-100" alt="はじめよう">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
      <i class="fas fa-chevron-circle-left fa-2x"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
      <i class="fas fa-chevron-circle-right fa-2x"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="text-center my-4">
    <button type="button" class="btn btn-info btn-lg">
      <%= link_to "/mypage" do %>
        <h4 class="text-white font-weight-bold pt-2">はじめる</h4>
      <% end %>
    </button>
  </div>
</div>

